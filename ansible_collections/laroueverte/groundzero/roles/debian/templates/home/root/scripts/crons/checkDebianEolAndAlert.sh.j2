#!/bin/bash

if [ $# -ne 0 ];then
        echo "Usage : $0"
        exit 1;
fi

DAYS_LEFT=`/home/root/scripts/getDebianEolDaysLeft.sh`
HOSTNAME=`hostname`

if [ $DAYS_LEFT -lt 90 ];then
	echo "Debian EOL is due to occur in $DAYS_LEFT days (on {{debian.data[debian_distri].eol_lts}}) on {{host_role}}" | mail -s "Debian End Of Life Support in less than 90 days on {{host_role}}" {{common_monitoring_email}}
fi